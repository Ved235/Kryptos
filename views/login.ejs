<%- include('header'); -%>
<div class="container">
  <div class="ib-child">
    <img src="https://media.discordapp.net/attachments/744967416009982083/1146166024077578330/1-removebg-preview.png?ex=67aef20a&is=67ada08a&hm=3a056cdaee508c476f25ba7c88bff7ff48acc3f4b31d93ac7bdf6cf6a7ca967e&=&format=webp&quality=lossless" alt="Kryptos login" style="width: 100%; height: 100%; padding-left: 20%"/>
  </div>
  <div class="ib-child">
    <form action="/login" method="post" class="loginform">
      <h1>Login</h1>
      <input
        type="email"
        name="email"
        required
        placeholder="Email"
        autocomplete="off"
      />
      <input
        type="password"
        name="password"
        required
        placeholder="Password"
        autocomplete="off"
      />
      <% if (locals.failure) { %>
      <p class="error">Could not find a user with the given credentials.</p>
      <% } %> <% if (locals.passed) { %>
      <p style="color: green">Password Changed!</p>
      <% } %>
      <div class="bottomer">
        <p
          class="pass"
          onclick="$('.loginform').hide();$('.passchange').show()"
        >
          Change Password
        </p>
        <input type="submit" value="Login" />
      </div>
    </form>
    <form
      action="/passchange"
      method="post"
      class="passchange"
      style="display: none"
    >
      <h1 style="line-height: 70px">Change Password</h1>
      <input type="email" name="email" required placeholder="Email" />
      <input type="password" name="old" required placeholder="Old Password" />
      <input type="password" name="new" required placeholder="New Password" />
      <% if (locals.passsfailure) { %>
      <p class="error">Could not find a user with the given credentials.</p>
      <% } %>
      <div class="bottomer">
        <p
          class="pass"
          onclick="$('.passchange').hide();$('.loginform').show()"
        >
          Login
        </p>
        <input type="submit" value="Change" />
      </div>
    </form>
  </div>
</div>
<script
  src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"
  defer
></script>
<%- include('footer'); -%>
